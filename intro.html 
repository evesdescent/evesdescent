<body>
  <div class="logo-container" onclick="enterSite()">
    <img src="images/logo.png" alt="EVESDESCENT Logo">
  </div>

  <script>
    function enterSite() {
      const logo = document.querySelector('.logo-container');
      logo.classList.add('fade-out');
      setTimeout(() => {
        window.location.href = 'index.html';
      }, 600); // wait for fade out
    }
  </script>
